generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Paciente {
  id         Int      @id @default(autoincrement())
  nomePaciente String
  senha       Int
  usuario     String @unique
  consultas   Consulta[]
}

model Secretaria {
  id           Int      @id @default(autoincrement())
  nome         String @unique
  RG           Int
  consultas    Consulta[]
}

model Consulta {
  id           Int      @id @default(autoincrement())
  data         DateTime
  nomePaciente String @unique
  nomeDentista String
  paciente     Paciente? @relation(fields: [nomePaciente], references: [usuario])
  secretaria   Secretaria? @relation(fields: [nomePaciente], references: [nome])
  agendas      Agenda[]
}

model Agenda {
  id           Int      @id @default(autoincrement())
  data         DateTime
  nomePaciente String
  consulta     Consulta? @relation(fields: [nomePaciente], references: [nomePaciente])
}
